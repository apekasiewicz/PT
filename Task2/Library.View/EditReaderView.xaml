<Window x:Class="Library.View.EditReaderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View" xmlns:vm="clr-namespace:Library.UI;assembly=Library.UI"
        mc:Ignorable="d"
        Title="EditReaderView" Height="450" Width="800">

    <Window.DataContext>
        <vm:ReaderListViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <TextBlock Margin="100, 50, 100, 10" Text="Edit reader" FontWeight="Bold" FontSize="20"/>
            <TextBlock Margin="100, 50, 100, 10" Text="First name" FontSize="16"/>
            <TextBox Margin="100, 0, 190, 10" Text="{Binding CurrentReader.reader_f_name}" />


            <TextBlock Margin="100, 20, 100, 10 " Text="Last name" FontSize="16"/>
            <TextBox Margin="100, 0, 190, 10" Text="{Binding CurrentReader.reader_l_name}" />
            <Button Width="120" Height="50" Margin="10, 50, 10, 10 " Content="EDIT READER" />
        </StackPanel>
    </Grid>
</Window>
